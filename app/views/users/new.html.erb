<h1>Sign Up to Use reciPals!</h1>

<%= form_for(@user) do |f| %>

    <%= f.label :username, "Username:" %>
    <%= f.text_field :username %>

    <%= f.label :email, "Email:" %>
    <%= f.text_field :email %>

    <%= f.label :password, "Password:" %>
    <%= f.password_field :password %><br/>

    <%= f.submit "Sign Up!" %>

<% end %>